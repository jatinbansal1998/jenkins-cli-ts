{
  "name": "jenkins-cli-ts",
  "version": "0.6.2",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "bin": {
    "jenkins-cli": "dist/jenkins-cli"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outfile dist/jenkins-cli --target bun",
    "install:global": "bun run build && bun link",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint:fix && bun run format && bun run typecheck",
    "test": "bun test",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.35",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.42.0",
    "prettier": "3.8.1",
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "yargs": "^18.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,css,md}": [
      "oxlint --fix",
      "prettier --write"
    ]
  }
}
